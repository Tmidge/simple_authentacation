<h1>Teachers#index</h1>
<%= @current_user.name %>
<p id="notice"><%= notice %></p>
<table>
  <thead>
    <tr>
      <th>Parent </th>
      <th>Email </th>
      <th>Child Name </th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @current_user.parents.each do |parent| %>
      <tr>
        <td><%= parent.name %></td>
        <td><%= parent.email %></td>
        <td><%= parent.child_name %></td>
        <td><%= link_to 'Edit', edit_parent_path(parent) %></td>
        <td><%= link_to 'Remove Parent', parent, method: :delete, data: { confirm: 'Are you sure?' } %></td><br>
      </tr>
    <% end %>
    <%= link_to 'Change User Info', edit_teacher_path(@current_user) %><br>
  </tbody>
  <%= link_to 'New parent', new_parent_path %>
</table>



<br>
<p>  <%= link_to 'logout', logout_path %></p>
<p> <%= link_to 'Home', root_path %> </p>
