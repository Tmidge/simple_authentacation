<h1>Teachers#edit</h1>
<%= form_for @current_user do |c|%>

  <div class="field">
    <%= c.label :name %><br>
    <%= c.text_field :name %>
  </div>
  <div class="actions">
    <%= c.submit 'Change Name'%>
  </div>
<% end %>

<%= form_for @current_user do |c|%>

  <div class="field">
    <%= c.label :password %><br>
    <%= c.text_field :password %>
  </div>
  <div class="actions">
    <%= c.submit 'Change Password'%>
  </div>
<% end %>
